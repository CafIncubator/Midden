@page "/editor"
@inject Services.StateContainer State

<PageHeader Title="Editor" Subtitle="@State.SchemaVersion" />


<AntDesign.Row Justify="start">
    <AntDesign.Col Span="6">
        <MetadataLoaderFileSystem @bind-Metadata="State.MetadataEdit" />
    </AntDesign.Col>
</AntDesign.Row>
<AntDesign.Divider />
<AntDesign.Row Justify="center">
    <AntDesign.Col Span="18">
        <MetadataEditor @bind-Metadata="State.MetadataEdit"
                        AppConfig="State.AppConfig" />
    </AntDesign.Col>
</AntDesign.Row>